@{
}
@model Instructor;

<h1>Add Instructor</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddInstructor" method="post">
    <!-- <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" hidden/>

    </div>-->
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rank"></label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"><option disabled selected>Select Rank</option></select>
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsTenured"></label>
        <select asp-for="IsTenured" class="form-control">
            <option disabled selected>Select Status</option>
            <option value="true">Permanent</option>
            <option value="false">Probationary</option>
        </select>
        <span asp-validation-for="IsTenured" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate"></label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>