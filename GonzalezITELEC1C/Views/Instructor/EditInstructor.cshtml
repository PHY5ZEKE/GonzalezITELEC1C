@{
}
@model Instructor;

<h1>Edit Instructor</h1>

<form asp-action="EditInstructor" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" disabled/> 
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"><option disabled selected>Select Rank</option></select>

    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" class="form-control">
            <option disabled selected>Select Status</option>
            <option value="true">Permanent</option>
            <option value="false">Probationary</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">HiringDate</label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <br />
    <div>
    <button type="submit" class="btn btn-primary">Save</button>
     <button type="button" class="btn btn-secondary" onclick="history.back();">Cancel</button>
    </div>
</form>