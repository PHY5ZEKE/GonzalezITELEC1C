@{
    var Name = "Ezequiel Gonzalez";
    var Email = "ezequiel.gonzalez.cics@ust.edu.ph"; 
    DateTime Birthday = DateTime.Parse("07/09/2001");
    var Prelim = 100;
    var Final = 100;
    var SemGrade = (Prelim + Final) / 2;
    var TransmutedGrade = "";

    if (SemGrade >= 96)
    {
        TransmutedGrade = "1.00";
    }
    else if (SemGrade >= 94)
    {
        TransmutedGrade = "1.25";
    }
    else if (SemGrade >= 92)
    {
        TransmutedGrade = "1.50";
    }
    else if (SemGrade >= 89)
    {
        TransmutedGrade = "1.75";
    }
    else if (SemGrade >= 87)
    {
        TransmutedGrade = "2.00";
    }
    else if (SemGrade >= 84)
    {
        TransmutedGrade = "2.25";
    }
    else if (SemGrade >= 82)
    {
        TransmutedGrade = "2.50";
    }
    else if (SemGrade >= 79)
    {
        TransmutedGrade = "2.75";
    }
    else if (SemGrade >= 75)
    {
        TransmutedGrade = "3.00";
    }
    else
    {
        TransmutedGrade = "5.00";
    }
}


<p>Student View</p>
<div class="text-center">
<table border="1">
    <tr>
        <td>Name</td>
        <td>@Name</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Email</td>
    </tr>
    <tr>
        <td>Prelim</td>
        <td>@Prelim</td>
    </tr>
    <tr>
        <td>Final</td>
        <td>@Final</td>
    </tr>
    <tr>
        <td>Sem Grade</td>
        <td>@SemGrade</td>
    </tr>
    <tr>
        <td>Transmuted Grade</td>
        <td>@TransmutedGrade</td>

    </tr>
   </div>
</table>
<br />
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Birthday</th>
        <th>Major</th>
        <th>Details</th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Email</td>
            <td>@student.Birthday</td>
            <td>@student.Major</td>
            <td><a asp-action="ShowDetails" asp-route-id="@student.Id">Show Details</a></td>
        </tr>
    }
</table>
